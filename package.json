{
  "name": "herina",
  "version": "0.0.0",
  "private": true,
  "description": "A Toolkit providing dynamic ability for React Native App.",
  "workspaces": [
    "packages/*"
  ],
  "repository": "https://github.com/Hector-Chong/herina",
  "author": "HÃ©ctor Chong <i@hector.im> (https://github.com/Hector-Chong)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Hector-Chong/herina/issues"
  },
  "homepage": "https://github.com/Hector-Chong/herina#readme",
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "lerna": "^6.4.0",
    "prettier": "latest",
    "git-cz": "^4.9.0",
    "husky": "^8.0.0",
    "cz-conventional-changelog": "3.3.0",
    "commitizen": "^4.2.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/git-cz"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "exec < /dev/tty && npx cz --hook || true",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  }
}