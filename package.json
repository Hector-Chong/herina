{
  "name": "herina",
  "version": "0.0.0",
  "private": true,
  "description": "A Toolkit providing dynamic ability for React Native App.",
  "homepage": "https://github.com/Hector-Chong/herina#readme",
  "bugs": {
    "url": "https://github.com/Hector-Chong/herina/issues"
  },
  "repository": "https://github.com/Hector-Chong/herina",
  "license": "MIT",
  "author": "HÃ©ctor Chong <i@hector.im> (https://github.com/Hector-Chong)",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/git-cz"
    }
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "git-cz": "^4.9.0",
    "husky": "^8.0.0",
    "lerna": "^6.4.0",
    "lint-staged": "^13.1.1",
    "prettier": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
