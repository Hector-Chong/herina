// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json", /* Recommended React Native TSConfig base */
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    /* Completeness */
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "typeRoots": [
      "./node_modules/@types/",
      "./typings"
    ],
    "declaration": true,
    "moduleResolution": "node",
    "lib": [
      "es2021",
      "dom"
    ],
  },
  "include": [
    "src/**/*",
    "typings/*",
    "./node_modules/@types"
  ],
  "ts-node": {
    "esm": true,
    "files": true,
    "compilerOptions": {
      "typeRoots": [
        "./node_modules/@types/",
        "./typings",
        "./yalc/herina/typings"
      ],
    }
  }
}
